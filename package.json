{
  "version": "0.8.0",
  "name": "ppsw",
  "description": "ppsloop demo",
  "homepage": "http://greenglobal.vn",
  "repository": {
    "type": "git",
    "url": "git@github.com:greenglobal/ppsloop.git"
  },
  "author": "@ndaidong",
  "keywords": [
    "animation",
    "widget",
    "presentation",
    "slideshow"
  ],
  "main": "./dist/ppsloop.js",
  "module": "./src/widget/main.js",
  "jsnext:main": "./src/widget/main.js",
  "engines": {
    "node": ">= 7.6"
  },
  "scripts": {
    "lint": "eslint src/widget",
    "start": "DEBUG=ppsw:* NODE_ENV=development node server.js -p 8080",
    "nsp": "nsp check --output checkstyle",
    "tape": "babel-node node_modules/.bin/tape test/start.js | tap-spec",
    "pretest": "npm run lint && npm run build",
    "test": "NODE_ENV=test npm run tape",
    "posttest": "npm run nsp",
    "build": "DEBUG=ppsw:* NODE_ENV=production node builder/bin/build",
    "reset": "node reset"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.x.x",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "bellajs": "7.x.x",
    "copy-dir": "0.x.x",
    "css-mqpacker": "6.x.x",
    "eslint": "4.x.x",
    "eslint-config-ggc": "1.x.x",
    "html-minifier": "3.x.x",
    "jsdom": "11.x.x",
    "jsdom-global": "3.x.x",
    "mkdirp": "0.x.x",
    "node-fetch": "1.x.x",
    "nsp": "2.x.x",
    "postcss": "^6.0.14",
    "postcss-clean": "^1.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "realdom": "^3.2.11",
    "rollup": "^0.50.0",
    "rollup-plugin-cleanup": "^2.0.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "siema": "1.x.x",
    "strip-css-comments": "^3.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "uglify-es": "^3.1.8"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%"
            ]
          }
        }
      ]
    ]
